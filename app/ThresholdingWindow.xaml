<Window x:Class="APO_v1.ThresholdingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APO_v1"
        mc:Ignorable="d"
        Title="Thresholding" Height="137" Width="358" ResizeMode="CanMinimize" Closing="Window_Closing">
    <Grid Margin="0,0,0,1">
        <CheckBox x:Name="CB_2" Content="Thresholding with keeping luminance levels" HorizontalAlignment="Left" Margin="32,46,0,0" VerticalAlignment="Top" Checked="CB_2_Checked"/>
        <Button x:Name="ApplyBtn" Content="Apply" HorizontalAlignment="Left" Margin="274,69,0,0" VerticalAlignment="Top" Width="54" Click="ApplyBtn_Click" Height="24"/>
        <Slider x:Name="p1_slider" HorizontalAlignment="Left" Margin="57,14,0,0" VerticalAlignment="Top" Width="176" ValueChanged="p1_slider_ValueChanged" IsSnapToTickEnabled="True"
    TickFrequency="1"/>
        <TextBox x:Name="p1_TB" HorizontalAlignment="Left" Margin="250,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="64" LostFocus="p1_TB_LostFocus"/>
        <Label x:Name="p1_label" Content="p1" HorizontalAlignment="Left" Margin="26,6,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
