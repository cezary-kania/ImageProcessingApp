<Window x:Class="APO_v1.LumRangeStrWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APO_v1"
        mc:Ignorable="d"
        Title="Range Streching" Height="148" Width="208">
    <Grid>
        <Button x:Name="ApplyBtn" Content="Apply" HorizontalAlignment="Left" Margin="132,85,0,0" VerticalAlignment="Top" Click="button_Click"/>
        <Label x:Name="label" Content="p1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="p2" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="p1_TB" HorizontalAlignment="Left" Margin="47,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="p1_TB_TextChanged"/>
        <TextBox x:Name="p2_TB" HorizontalAlignment="Left" Margin="47,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="p2_TB_TextChanged"/>

    </Grid>
</Window>
