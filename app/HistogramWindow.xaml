<Window x:Class="APO_v1.HistogramWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APO_v1"
        mc:Ignorable="d"
        Title="HistogramWindow" Height="450" Width="800">
    <Grid>
        <Menu DockPanel.Dock="Top" Height="20" VerticalAlignment="Top">
            <MenuItem Header="_Histogram">
                <MenuItem Header="_Save As..." />
                <Separator />
                <MenuItem Header="_Close" Click="CloseBtn_Click" />
            </MenuItem>
            <MenuItem Header="_Zoom">
                <MenuItem Header="_100%" />
                <MenuItem Header="_125%" />
                <MenuItem Header="_150%" />
                <MenuItem Header="_175%" />
                <MenuItem Header="_200%" />
            </MenuItem>
        </Menu>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="10,0,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Center" Width="761" Height="366"/>

    </Grid>
</Window>
