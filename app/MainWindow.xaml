<Window x:Class="APO_v1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APO_v1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <!--<MenuItem Header="_New" />-->
                <MenuItem Header="_Open" Click="OpenBtn_Click" />
                <MenuItem x:Name="SaveBtn" Header="_Save"  IsEnabled="False"/>
                <Separator />
                <MenuItem Header="_Exit" Click="Exit_Click" />
            </MenuItem>
            <MenuItem x:Name="Lab1MenuI" Header="_Lab1" IsEnabled="False">
                <MenuItem x:Name="HistogramBtn" Header="_Histogram"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
